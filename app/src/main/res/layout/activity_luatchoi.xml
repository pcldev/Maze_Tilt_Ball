<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LuatchoiActivity">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="295dp"
        android:layout_height="61dp"
        android:text="Cách chơi Maze Tilt Ball"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.063" />

    <TextView
        android:id="@+id/txtluat"
        android:layout_width="349dp"
        android:layout_height="308dp"
        android:gravity="center"
        android:text="Khi ấn vào nút bắt đầu chơi thì giao diện người dùng chuyển đến giao diện có 1 quả. Người dùng sẽ sử dụng nghiêng sang trái sang phải, hướng về  trước và sau của điện thoại để quả bóng tránh chướng ngại vật. Người dùng được tính thời gian mỗi màn chơi cho người dùng. Vượt qua hết chướng ngại vật đến điểm đó là đích thì người chơi đã chiến thắng và màn chơi sẽ dừng."
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTitle"
        app:layout_constraintVertical_bias="0.064" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="282dp"
        android:layout_height="210dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtluat"
        app:layout_constraintVertical_bias="0.235"
        app:srcCompat="@drawable/img" />
</androidx.constraintlayout.widget.ConstraintLayout>